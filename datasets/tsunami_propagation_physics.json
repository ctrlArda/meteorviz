      }
    ]
  },
  "wave_attenuation": {
    "description": "Energy loss during propagation",
    "factors": {
      "geometric_spreading": {
        "description": "Wave energy spreads over increasing circumference",
        "formula": "amplitude ∝ 1 / sqrt(distance)",
        "note": "Energy per unit length decreases as 1/r"
      },
      "bottom_friction": {
        "description": "Seafloor roughness dissipates energy",
        "attenuation_coefficient": 0.001,
        "formula": "H(r) = H_0 * exp(-k * r)",
        "note": "More important in shallow continental shelves"
      },
      "refraction_focusing": {
        "description": "Bathymetry can focus or defocus tsunami energy",
        "submarine_ridges": "focus energy (dangerous)",
        "submarine_canyons": "can channel energy",
        "seamounts": "scatter energy (protective)",
        "example": "Hawaiian islands focus tsunami energy from Alaska"
      }
    },
    "distance_attenuation_table": [
