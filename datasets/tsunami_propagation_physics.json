{
  "metadata": {
    "description": "Tsunami generation, propagation, and run-up physics for ocean impacts",
    "sources": [
      "Ward, S. N., & Asphaug, E. (2000). Asteroid impact tsunami. Geophysical Journal International.",
      "Wünnemann, K., & Weiss, R. (2015). The Eltanin impact and its tsunami. Impact Cratering.",
      "NOAA NCEI Global Historical Tsunami Database",
      "GEBCO (General Bathymetric Chart of the Oceans) 2023",
      "Green's Law for tsunami shoaling",
      "Shallow Water Wave Equations"
    ],
    "critical_note": "Simple 'tsunami exists' flag is not enough - need PHYSICS of wave propagation",
    "validation": "Must match historical tsunami run-up data"
  },
  "tsunami_generation_physics": {
    "description": "Ocean impact creates displacement wave, not explosion wave",
    "theory": "Volume displacement creates radial tsunami with wavelength ~ crater diameter",
    "key_insight": "Tsunami energy depends on water depth vs projectile diameter",
    "generation_regimes": {
      "shallow_water_impact": {
        "condition": "water_depth < projectile_diameter",
        "crater_formation": "reaches seafloor",
        "tsunami_efficiency": 0.05,
        "wave_generation": "strong initial wave, high energy",
        "note": "Efficient tsunami generation, dangerous for coasts"
      },
      "intermediate_depth_impact": {
        "condition": "projectile_diameter < water_depth < 10 * diameter",
        "crater_formation": "partial seafloor contact",
        "tsunami_efficiency": 0.02,
        "wave_generation": "moderate tsunami",
        "note": "Most common scenario for continental shelf impacts"
      },
      "deep_water_impact": {
        "condition": "water_depth > 10 * projectile_diameter",
        "crater_formation": "transient cavity in water",
        "tsunami_efficiency": 0.001,
        "wave_generation": "weak initial wave, energy disperses",
        "note": "Deep ocean impacts less dangerous than intuition suggests"
      }
    }
  },
  "tsunami_initial_amplitude": {
    "description": "Initial wave height at generation point",
    "formula": "H_0 = efficiency * (projectile_diameter * velocity^2 / (g * water_depth))^0.5",
    "parameters": {
      "efficiency": "0.001 to 0.05 (depth-dependent)",
      "projectile_diameter": "meters",
      "velocity": "m/s (impact velocity)",
      "g": "9.81 m/s² (gravity)",
      "water_depth": "meters (bathymetry)"
    },
    "example_calculations": [
      {
        "scenario": "100m asteroid @ 20 km/s in 1000m deep water",
        "diameter_m": 100,
        "velocity_m_s": 20000,
        "water_depth_m": 1000,
        "efficiency": 0.02,
        "initial_wave_height_m": 89,
        "note": "Dangerous tsunami"
      },
      {
        "scenario": "100m asteroid @ 20 km/s in 4000m deep ocean",
        "diameter_m": 100,
        "velocity_m_s": 20000,
        "water_depth_m": 4000,
        "efficiency": 0.001,
        "initial_wave_height_m": 6,
        "note": "Attenuates significantly before reaching coast"
      },
      {
        "scenario": "1km asteroid @ 20 km/s in 4000m deep ocean",
        "diameter_km": 1,
        "velocity_m_s": 20000,
        "water_depth_m": 4000,
        "efficiency": 0.01,
        "initial_wave_height_m": 707,
        "note": "Mega-tsunami, transoceanic devastation"
      }
    ]
  },
  "shallow_water_wave_equations": {
    "description": "Tsunami propagates as shallow-water wave (wavelength >> depth)",
    "wave_speed_formula": "c = sqrt(g * h)",
    "wave_speed_examples": [
      {"water_depth_m": 10, "wave_speed_km_h": 36, "wave_speed_m_s": 10},
      {"water_depth_m": 100, "wave_speed_km_h": 113, "wave_speed_m_s": 31},
      {"water_depth_m": 1000, "wave_speed_km_h": 356, "wave_speed_m_s": 99},
      {"water_depth_m": 4000, "wave_speed_km_h": 713, "wave_speed_m_s": 198},
      {"water_depth_m": 6000, "wave_speed_km_h": 873, "wave_speed_m_s": 242}
    ],
    "travel_time_calculation": {
      "description": "Time for tsunami to cross ocean basin",
      "pacific_ocean_width_km": 15000,
      "travel_time_hours": 21,
      "atlantic_ocean_width_km": 6000,
      "travel_time_hours": 8.4,
      "note": "Provides warning time for distant coasts"
    }
  },
  "greens_law_shoaling": {
    "description": "Wave height amplification as tsunami approaches shallow water",
    "theory": "Energy conservation: as depth decreases, wave height increases",
    "formula": "H_final / H_initial = (h_initial / h_final)^(1/4)",
    "explanation": "Wave slows down and piles up as it reaches shallow water",
    "shoaling_examples": [
      {
        "deep_ocean_depth_m": 4000,
        "coastal_depth_m": 10,
        "amplification_factor": 4.5,
        "deep_ocean_height_m": 1,
        "coastal_height_m": 4.5,
        "note": "Why tsunamis seem small at sea but huge at coast"
      },
      {
        "deep_ocean_depth_m": 4000,
        "coastal_depth_m": 2,
        "amplification_factor": 6.7,
        "deep_ocean_height_m": 1,
        "coastal_height_m": 6.7,
        "note": "Very shallow water = extreme amplification"
      },
      {
        "deep_ocean_depth_m": 1000,
        "coastal_depth_m": 10,
        "amplification_factor": 3.2,
        "deep_ocean_height_m": 2,
        "coastal_height_m": 6.4
      }
    ]
  },
  "run_up_calculation": {
    "description": "Maximum inland penetration and vertical elevation of tsunami",
    "run_up_height_formula": "R = H * (1 / tan(slope))^0.5 * roughness_factor",
    "run_up_distance_formula": "L = R / sin(slope)",
    "parameters": {
      "H": "wave height at shore (meters)",
      "slope": "coastal slope (radians)",
      "roughness_factor": "0.5 (urban) to 1.0 (smooth beach) to 2.0 (vegetation)",
      "R": "vertical run-up height (meters)",
      "L": "horizontal inundation distance (meters)"
    },
