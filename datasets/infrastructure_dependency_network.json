    ]
  },
  "cascading_failure_scenarios": {
    "scenario_1_power_plant_destroyed": {
      "trigger": "Impact destroys major power plant",
      "immediate_effects": {
        "power_outage_radius_km": 50,
        "population_affected": 5000000,
        "outage_duration_hours": 168
      },
      "cascade_timeline": [
        {
          "time_hours": 0,
          "event": "Power plant destroyed",
          "services_affected": ["electricity"]
        },
        {
          "time_hours": 0.5,
          "event": "Cell towers on battery backup",
          "services_affected": ["electricity", "telecommunications_degraded"]
        },
        {
          "time_hours": 2,
          "event": "Water pumps fail, pressure drops",
          "services_affected": ["electricity", "telecommunications_degraded", "water_pressure_low"]
        },
        {
          "time_hours": 4,
          "event": "Cell towers batteries dead, communication lost",
          "services_affected": ["electricity", "telecommunications", "water_pressure_low"]
        },
        {
          "time_hours": 8,
          "event": "Hospitals switch to emergency generators",
          "services_affected": ["electricity", "telecommunications", "water_pressure_low", "hospitals_generator_mode"]
        },
        {
          "time_hours": 12,
          "event": "Fuel for generators running low",
          "services_affected": ["electricity", "telecommunications", "water", "hospitals_fuel_critical"]
        },
        {
          "time_hours": 24,
          "event": "Traffic lights fail, transportation gridlock",
          "services_affected": ["electricity", "telecommunications", "water", "transportation", "hospitals_degraded"]
        },
        {
          "time_hours": 48,
          "event": "Food spoilage in refrigeration, stores closed",
          "services_affected": ["electricity", "telecommunications", "water", "transportation", "food_supply", "hospitals_degraded"]
        },
        {
          "time_hours": 72,
          "event": "Some hospitals evacuate patients due to fuel shortage",
          "services_affected": ["electricity", "telecommunications", "water", "transportation", "food_supply", "hospitals_partial_collapse"]
        },
        {
          "time_hours": 168,
          "event": "Power restored, cascade reversal begins",
          "services_affected": ["recovery_phase"]
        }
      ],
      "total_casualty_multiplier": 2.5,
      "economic_loss_multiplier": 5.0,
      "note": "Direct impact casualties × 2.5 due to infrastructure failure"
    },
    "scenario_2_submarine_cable_cut": {
      "trigger": "Ocean impact damages submarine internet cable",
      "immediate_effects": {
        "internet_outage": "regional",
        "population_affected": 50000000,
        "outage_duration_days": 14
      },
      "cascade_effects": {
        "financial_markets": "halted",
        "emergency_coordination": "degraded",
        "supply_chain": "disrupted",
        "economic_loss_per_day_usd": 500000000
      },
      "note": "Modern economy critically dependent on data connectivity"
    },
    "scenario_3_bridge_destruction": {
      "trigger": "Impact near major bridge causes structural failure",
      "immediate_effects": {
        "transportation_severed": true,
        "alternate_route_distance_km": 200,
        "travel_time_increase_hours": 4
      },
      "cascade_effects": {
        "emergency_response_delayed": true,
        "supply_delivery_disrupted": true,
        "economic_loss_per_day_usd": 50000000
      },
      "recovery_time_months": 24,
      "note": "Bridges are single-point-of-failure for transportation"
    },
    "scenario_4_multi_sector_collapse": {
      "trigger": "Major urban impact destroys multiple infrastructure nodes",
      "simultaneous_failures": ["power", "water", "telecom", "hospitals"],
      "cascade_description": "Complete urban system collapse",
      "evacuation_required": true,
      "population_displaced": 10000000,
      "recovery_time_years": 5,
      "note": "Catastrophic - city becomes uninhabitable temporarily"
    }
  },
  "infrastructure_vulnerability_factors": {
    "single_point_of_failure": {
      "description": "Critical nodes whose loss disables entire network",
      "examples": [
        "Major power plant serving entire region",
        "Main bridge connecting isolated area",
        "Central internet exchange hub"
      ],
      "vulnerability_score": 10,
      "mitigation": "Redundancy and distributed systems"
    },
    "geographic_concentration": {
      "description": "Multiple critical facilities in same location",
      "example": "All hospitals in downtown area",
      "vulnerability_score": 8,
      "impact_scenario": "Single impact can destroy all hospitals"
    },
    "aging_infrastructure": {
      "description": "Old systems more fragile to shock",
      "vulnerability_score": 7,
      "note": "Developed nations often have older, brittle infrastructure"
    },
    "just_in_time_supply": {
      "description": "No buffer stocks, immediate shortage on disruption",
      "examples": ["food supply", "medical supplies", "fuel"],
      "vulnerability_score": 9,
      "note": "Modern efficiency creates fragility"
    }
  },
  "resilience_factors": {
    "redundancy": {
      "description": "Backup systems can take over",
      "examples": ["Multiple power plants", "Emergency generators", "Alternate routes"],
      "resilience_score": 8,
      "note": "Costs more but reduces cascade risk"
    },
    "distributed_systems": {
      "description": "No single point of failure",
      "examples": ["Solar panels + batteries", "Mesh networks", "Local food production"],
      "resilience_score": 9,
      "note": "Expensive but highly resilient"
    },
    "stockpiles": {
      "description": "Buffer supplies for disruption",
      "examples": ["Strategic petroleum reserve", "Medical supply caches", "Food storage"],
      "resilience_score": 6,
      "note": "Limited by storage capacity and shelf life"
    },
    "rapid_repair_capability": {
      "description": "Pre-positioned repair equipment and trained personnel",
      "resilience_score": 7,
      "note": "Reduces recovery time from weeks to days"
    }
  },
