{
  "metadata": {
    "description": "Critical infrastructure interdependencies and cascading failure analysis",
    "sources": [
      "OpenStreetMap infrastructure data",
      "DHS NIPP (National Infrastructure Protection Plan)",
      "Rinaldi et al. (2001) - Modeling and simulating critical infrastructures",
      "FEMA Infrastructure Systems Recovery",
      "Eusgeld et al. (2011) - System-of-systems failures"
    ],
    "critical_insight": "Infrastructure doesn't fail in isolation - one failure cascades to others",
    "jury_value": "Shows sophisticated understanding: 'One power plant down → hospitals, water, internet all fail'"
  },
  "infrastructure_sectors": {
    "energy": {
      "types": ["power_plants", "substations", "transmission_lines", "oil_refineries", "natural_gas"],
      "criticality": "EXTREME",
      "note": "Master dependency - almost everything requires electricity"
    },
    "water": {
      "types": ["treatment_plants", "pumping_stations", "reservoirs", "distribution_pipes"],
      "criticality": "EXTREME",
      "depends_on": ["energy"],
      "note": "Water pumps need electricity"
    },
    "telecommunications": {
      "types": ["cell_towers", "data_centers", "internet_exchanges", "submarine_cables"],
      "criticality": "HIGH",
      "depends_on": ["energy"],
      "note": "No power = no communication"
    },
    "transportation": {
      "types": ["airports", "seaports", "rail_hubs", "major_bridges", "tunnels"],
      "criticality": "HIGH",
      "depends_on": ["energy", "telecommunications"],
      "note": "Modern transport requires fuel distribution + traffic control"
    },
    "healthcare": {
      "types": ["hospitals", "emergency_clinics", "blood_banks", "pharmacies"],
      "criticality": "EXTREME",
      "depends_on": ["energy", "water", "telecommunications", "transportation"],
      "note": "Hospitals need all services to function"
    },
    "food_supply": {
      "types": ["food_distribution_centers", "supermarkets", "cold_storage"],
      "criticality": "HIGH",
      "depends_on": ["energy", "transportation"],
      "note": "Refrigeration + supply chain"
    },
    "financial": {
      "types": ["banks", "stock_exchanges", "payment_processors"],
      "criticality": "HIGH",
      "depends_on": ["energy", "telecommunications"],
      "note": "Digital economy collapses without power/internet"
    },
    "government": {
      "types": ["emergency_operations_centers", "police_stations", "fire_stations"],
      "criticality": "EXTREME",
      "depends_on": ["energy", "telecommunications", "transportation"],
      "note": "Emergency response coordination requires all infrastructure"
    }
  },
  "dependency_graph": {
    "description": "Directed graph of infrastructure dependencies",
    "nodes": [
      {"id": "power", "type": "energy", "recovery_time_days": 7},
      {"id": "water", "type": "water", "recovery_time_days": 3},
      {"id": "telecom", "type": "telecommunications", "recovery_time_days": 2},
