      {"from": "telecom", "to": "transport", "dependency_type": "important", "coupling_strength": 0.6},
      {"from": "telecom", "to": "finance", "dependency_type": "essential", "coupling_strength": 1.0},
      {"from": "telecom", "to": "emergency", "dependency_type": "critical", "coupling_strength": 0.9},
