  "quantitative_cascade_model": {
    "description": "Mathematical model of cascade propagation",
    "failure_propagation_probability": {
      "formula": "P_fail(B|A) = coupling_strength(A→B) * severity(A)",
      "parameters": {
        "coupling_strength": "0.0 (independent) to 1.0 (fully dependent)",
        "severity": "0.0 (no damage) to 1.0 (complete destruction)"
      }
    },
    "functionality_level": {
      "formula": "F(t) = F_0 * exp(-damage) + (1 - exp(-recovery_rate * t))",
      "interpretation": "Infrastructure recovers exponentially over time",
      "typical_recovery_rates": {
        "power_per_day": 0.15,
        "water_per_day": 0.3,
        "telecom_per_day": 0.5,
        "transport_per_day": 0.2
      }
    },
    "economic_loss_from_infrastructure": {
      "formula": "Loss = Σ (sector_GDP * outage_duration * criticality)",
      "typical_values": {
        "power_gdp_per_day": 0.001,
        "water_gdp_per_day": 0.0005,
        "telecom_gdp_per_day": 0.002,
        "transport_gdp_per_day": 0.003
      }
    }
  },
