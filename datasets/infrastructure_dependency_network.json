      "impact": "DRAMATIC - Shows systems thinking, not just physics"
    }
  },
  "critical_infrastructure_database_schema": {
    "description": "Recommended structure for infrastructure tracking",
    "fields": {
      "id": "unique identifier",
      "type": "power_plant | hospital | bridge | etc",
      "location": {"lat": "float", "lon": "float"},
      "capacity": "MW | beds | vehicles_per_day",
      "population_served": "integer",
      "dependencies": ["array of infrastructure IDs this depends on"],
      "backup_systems": "boolean or object describing redundancy",
      "recovery_time_days": "float",
      "criticality_score": "1-10",
      "replacement_cost_usd": "float"
    }
  }
