      "fema_hazus": "Infrastructure vulnerability models (US-specific)"
    },
    "computational_approach": {
      "step_1": "Identify all critical infrastructure within impact radius",
      "step_2": "Assess direct damage to each node",
      "step_3": "Propagate failures through dependency graph",
      "step_4": "Calculate cascade timeline",
      "step_5": "Estimate total economic and casualty impact"
    },
    "visualization": "Network graph showing infrastructure nodes and dependencies, with cascade animation",
    "jury_demonstration": {
      "scenario": "Show impact destroying power plant → cascade diagram shows hospitals, water, telecom failing in sequence",
