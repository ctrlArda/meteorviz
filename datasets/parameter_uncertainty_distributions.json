      }
    },
    "diameter_distribution": {
      "distribution_type": "log_normal",
      "mean_from_magnitude": "D = 1329 / sqrt(albedo) * 10^(-H/5)",
      "sigma_geometric": 1.5,
      "note": "Log-normal because diameter cannot be negative"
    },
    "density_distribution": {
