  "confidence_interval_calculation": {
    "description": "How to report uncertainty in predictions",
    "methods": {
      "monte_carlo": {
        "description": "Sample parameter distributions N times, run model each time",
        "typical_n_samples": 10000,
        "output": "Distribution of outcomes",
        "confidence_intervals": "Directly from percentiles of distribution"
      },
      "linear_error_propagation": {
        "description": "Linearize model around mean values",
        "formula": "sigma_output² = Σ (∂f/∂x_i)² * sigma_x_i²",
        "limitation": "Only valid for small uncertainties, linear models",
        "advantage": "Fast, analytical"
      },
      "bayesian_inference": {
        "description": "Update probability distributions with observations",
        "advantage": "Rigorous statistical framework",
        "limitation": "Computationally expensive",
        "note": "Gold standard for serious impact risk assessment"
      }
    }
  },
