  "risk_quantification": {
    "description": "Probability × Consequence = Risk",
    "impact_probability": {
      "formula": "P_impact = N_virtual_impactors / N_monte_carlo_trials",
      "typical_values": {
        "newly_discovered_pho": "10^-6 to 10^-2",
        "sentry_listed_object": "10^-5 to 10^-1",
        "confirmed_impactor": "1.0"
      }
    },
    "expected_casualties": {
      "formula": "E[casualties] = Σ P(scenario_i) × casualties(scenario_i)",
      "note": "Integrate over all uncertain parameters"
    },
    "palermo_technical_scale": {
      "description": "Logarithmic risk scale used by astronomers",
      "formula": "P = log10(P_impact × E_impact / (f_background × T_years))",
      "interpretation": {
        "P_less_than_minus_2": "No concern",
